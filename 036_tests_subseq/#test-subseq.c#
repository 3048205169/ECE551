#include <stdio.h>
#include <stdlib.h>

size_t maxSeq(int * array, size_t n);

void test(size_t expectedNumber, size_t getNumber) {
  if (expectedNumber == getNumber) {
    printf("Congratulation! It is safe.");
    exit(EXIT_SUCCESS);
  }
  else {
    printf("So sad. It has some problems");
    exit(EXIT_FAILURE);
  }
}

void main(void) {
  int testcase1[6] = {1, 2, 3, 4, 5, 6};
  int testcase2[2] = {};
  int testcase3[0] = {};
  int testcase4[100] = {1, 1, 1, 1};
  int testcase5[  test(6, maxSeq(testcase1, 6));
  test(0, maxSeq(testcase3, 0));
  test(0, maxSeq(testcase2, 2));
  test(1, maxSeq(testcase4, 100));
}
